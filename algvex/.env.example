# ==============================================================================
# AlgVex Environment Variables
# 复制此文件为 .env 并修改配置
# ==============================================================================

# ==================== 应用配置 ====================
APP_NAME=AlgVex
APP_ENV=development  # development, staging, production
DEBUG=true
SECRET_KEY=change_this_to_a_very_long_random_string_at_least_32_chars

# ==================== 数据库配置 ====================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=algvex
POSTGRES_PASSWORD=algvex_dev_password_2024
POSTGRES_DB=algvex

# 完整连接URL (Docker内部使用)
DATABASE_URL=postgresql://algvex:algvex_dev_password_2024@postgres:5432/algvex

# ==================== Redis配置 ====================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379/0

# ==================== 币安API配置 ====================
# 测试网 (推荐先用测试网)
BINANCE_TESTNET=true
BINANCE_TESTNET_API_KEY=
BINANCE_TESTNET_API_SECRET=

# 实盘 (谨慎配置)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# ==================== 加密配置 ====================
# 用于加密存储API密钥
ENCRYPTION_MASTER_KEY=change_this_to_another_random_string_32_chars

# ==================== JWT配置 ====================
JWT_SECRET_KEY=change_this_jwt_secret_key_random_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== CORS配置 ====================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://algvex.com

# ==================== 日志配置 ====================
LOG_LEVEL=INFO
LOG_FORMAT=json  # json, text
LOG_FILE=/opt/algvex/logs/app.log

# ==================== 监控配置 ====================
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=admin_grafana_password

# ==================== 邮件配置 (可选) ====================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@algvex.com

# ==================== Telegram告警 (可选) ====================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ==================== 交易配置 ====================
DEFAULT_LEVERAGE=3
MAX_LEVERAGE=10
MAX_POSITION_PCT=0.2
STOP_LOSS_PCT=0.05
MAX_DAILY_LOSS_PCT=0.1

# ==================== 数据目录 ====================
DATA_DIR=/opt/algvex/data
MODEL_DIR=/opt/algvex/data/models
BACKUP_DIR=/opt/algvex/backups
